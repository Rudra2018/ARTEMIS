{
  "platform_name": "Generic MVP Security Tester",
  "version": "2.0.0",
  "description": "Universal AI-powered security testing for any web service",

  "mvp_mode": true,
  "auto_detect_target_type": true,
  "adaptive_testing": true,

  "testing_modes": {
    "quick": {
      "timeout": 300,
      "agents": ["infrastructure_agent", "llm_security_agent"],
      "depth": "basic"
    },
    "comprehensive": {
      "timeout": 1800,
      "agents": ["infrastructure_agent", "llm_security_agent", "vulnerability_agent"],
      "depth": "deep"
    },
    "auto": {
      "ai_optimization": true,
      "target_analysis": true,
      "adaptive_parameters": true
    }
  },

  "target_detection": {
    "web_application": {
      "indicators": ["text/html", "cookies", "forms"],
      "recommended_agents": ["infrastructure_agent", "vulnerability_agent"]
    },
    "rest_api": {
      "indicators": ["application/json", "api", "endpoints"],
      "recommended_agents": ["infrastructure_agent", "vulnerability_agent"]
    },
    "graphql_api": {
      "indicators": ["graphql", "query", "mutation"],
      "recommended_agents": ["infrastructure_agent", "vulnerability_agent"]
    },
    "mcp_server": {
      "indicators": ["jsonrpc", "mcp", "model context"],
      "recommended_agents": ["llm_security_agent", "infrastructure_agent", "vulnerability_agent"]
    },
    "websocket_service": {
      "indicators": ["websocket", "upgrade", "socket.io"],
      "recommended_agents": ["infrastructure_agent", "vulnerability_agent"]
    }
  },

  "ai_features": {
    "learning_enabled": true,
    "adaptive_parameters": true,
    "pattern_recognition": true,
    "false_positive_reduction": true,
    "automatic_optimization": true
  },

  "reporting": {
    "default_format": "json",
    "include_executive_summary": true,
    "include_ai_insights": true,
    "include_recommendations": true,
    "generate_compliance_notes": true
  },

  "security": {
    "sanitize_outputs": true,
    "no_sensitive_data_storage": true,
    "encrypted_learning_data": true,
    "rate_limiting": true
  },

  "performance": {
    "concurrent_agents": 5,
    "request_timeout": 30,
    "retry_attempts": 2,
    "cache_enabled": true
  }
}